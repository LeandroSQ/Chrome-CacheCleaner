{
    "name": "Cache cleaner",
    "short_name": "CacheCleaner",
    "version": "1.0",
    "description": "Limpa completamente cache, cookies e storages!",
    "homepage_url": "https://www.codai.com.br/",
    "offline_enabled": true,
    "author": "Leandro Soares Quevedo",    
    "manifest_version": 2,
    "permissions": [
        "storage",
        "browsingData",
        "cookies",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "view/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "19": "icons/icon19.png",
            "32": "icons/icon32.png",
            "38": "icons/icon38.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png" 
        }
    },
    "icons": { 
        "16": "icons/icon16.png",
        "19": "icons/icon19.png",
        "32": "icons/icon32.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    }
}